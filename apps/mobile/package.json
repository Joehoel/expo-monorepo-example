{
  "private": true,
  "name": "@boodschappen-vergelijker/mobile",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "expo start --dev-client",
    "lint": "eslint --ext js,ts,tsx .",
    "build": "expo export --output-dir ./build --platform all",
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "eas-build-pre-install": "npm install --global pnpm@7.x",
    "eas-build-post-install": "yarn run -w build:mobile"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.18.1",
    "@trpc/client": "^10.45.0",
    "@trpc/next": "^10.45.0",
    "@trpc/react-query": "^10.45.0",
    "expo": "~50.0.5",
    "expo-constants": "~15.4.5",
    "expo-dev-client": "~3.3.8",
    "expo-linking": "~6.2.2",
    "expo-router": "~3.4.6",
    "expo-splash-screen": "~0.26.4",
    "expo-status-bar": "~1.11.1",
    "expo-updates": "~0.24.9",
    "lucide-react-native": "^0.321.0",
    "nativewind": "4.0.22",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.73.2",
    "react-native-gesture-handler": "~2.14.0",
    "react-native-reanimated": "~3.6.2",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-svg": "14.1.0",
    "react-native-web": "~0.19.6",
    "tailwindcss": "^3.4.1",
    "ts-pattern": "^5.0.6",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@boodschappen-vergelijker/api": "*",
    "@boodschappen-vergelijker/eslint-config": "*",
    "@types/react": "~18.2.43",
    "@types/react-dom": "~18.0.11",
    "babel-preset-expo": "^10.0.0"
  },
  "eslintConfig": {
    "extends": "@boodschappen-vergelijker/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "build",
      ".expo",
      ".expo-shared"
    ],
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  }
}
