{
  "private": true,
  "name": "@boodschappen-vergelijker/mobile",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "dev": "expo start --dev-client",
    "lint": "eslint --ext js,ts,tsx .",
    "build": "expo export --output-dir ./build --platform all",
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo run:web",
    "eas-build-pre-install": "npm install --global pnpm@7.x",
    "eas-build-post-install": "yarn run -w build:mobile"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.18.1",
    "@trpc/client": "^10.45.0",
    "@trpc/next": "^10.45.0",
    "@trpc/react-query": "^10.45.0",
    "expo": "^49.0.10",
    "expo-constants": "~14.4.2",
    "expo-dev-client": "~2.4.8",
    "expo-linking": "~5.0.2",
    "expo-router": "^2.0.0",
    "expo-splash-screen": "~0.20.5",
    "expo-status-bar": "~1.6.0",
    "expo-updates": "~0.18.10",
    "nativewind": "4.0.22",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.72.6",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-reanimated": "~3.3.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-web": "~0.19.6",
    "tailwindcss": "^3.4.1",
    "ts-pattern": "^5.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@boodschappen-vergelijker/api": "*",
    "@boodschappen-vergelijker/eslint-config": "*",
    "@types/react": "~18.2.43",
    "@types/react-dom": "~18.0.11",
    "babel-preset-expo": "~9.5.0"
  },
  "eslintConfig": {
    "extends": "@boodschappen-vergelijker/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "build",
      ".expo",
      ".expo-shared"
    ],
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  }
}
